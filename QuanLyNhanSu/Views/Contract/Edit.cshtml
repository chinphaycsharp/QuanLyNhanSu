@model QuanLyNhanSu.ViewModels.Contract.EditContractViewModel
@using QuanLyNhanSu.Commons
@{
    ViewData["Title"] = "Edit";
}


@{
    var resultMscv = (ValidateResult)ViewBag.resultMscv;
    var resultMsnv = (ValidateResult)ViewBag.resultMsnv;
    var resultLoaiHd = (ValidateResult)ViewBag.resultLoaiHd;
    var resultHesoluongCb = (ValidateResult)ViewBag.resultHesoluongCb;
    var resultMucluongCb = (ValidateResult)ViewBag.resultMucluongCb;
    var DieukhoanHd = (ValidateResult)ViewBag.DieukhoanHd;
}

<br />
<h3>Sửa thông tin</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="SoHd" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Mscv" class="control-label"></label>
                <select id="drpEmpList" class="form-control" asp-for="Msnv" asp-items="@(new SelectList(ViewBag.employees, "Msnv", "HotenNv"))">
                </select>
                <input asp-for="Msnv" class="form-control" type="hidden" />
                @if (resultMscv != null)
                {
                    @if (resultMscv._isNull == false)
                    {
                        <span class="text-danger">@resultMscv._message</span>
                    }
                }
            </div>
            <div class="form-group">
                <label asp-for="Msnv" class="control-label"></label>
                <select id="drpPosList" class="form-control" asp-for="Mscv" asp-items="@(new SelectList( ViewBag.positions, "Mscv", "TenCv"))">
                </select>
                <input asp-for="Mscv" class="form-control" type="hidden" />
                @if (resultMsnv != null)
                {
                    @if (resultMsnv._isNull == false)
                    {
                        <span class="text-danger">@resultMsnv._message</span>
                    }
                }
            </div>
            <div class="form-group">
                <label asp-for="LoaiHd" class="control-label"></label>
                <input asp-for="LoaiHd" class="form-control" />
                @if (resultLoaiHd != null)
                {
                    @if (resultLoaiHd._isNull == false)
                    {
                        <span class="text-danger">@resultLoaiHd._message</span>
                    }
                }
            </div>
            <div class="form-group">
                <label asp-for="Tgianbatdau" class="control-label"></label>
                <input asp-for="Tgianbatdau" class="form-control" />
                <span asp-validation-for="Tgianbatdau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tgianketthuc" class="control-label"></label>
                <input asp-for="Tgianketthuc" class="form-control" />
                <span asp-validation-for="Tgianketthuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HesoluongCb" class="control-label"></label>
                <input asp-for="HesoluongCb" class="form-control" />
                @if (resultHesoluongCb != null)
                {
                    @if (resultHesoluongCb._isNull == false)
                    {
                        <span class="text-danger">@resultHesoluongCb._message</span>
                    }
                }
            </div>
            <div class="form-group">
                <label asp-for="MucluongCb" class="control-label"></label>
                <input asp-for="MucluongCb" class="form-control" />
                @if (resultMucluongCb != null)
                {
                    @if (resultMucluongCb._isNull == false)
                    {
                        <span class="text-danger">@resultMucluongCb._message</span>
                    }
                }
            </div>
            <div class="form-group">
                <label asp-for="DieukhoanHd" class="control-label"></label>
                <input asp-for="DieukhoanHd" class="form-control" />
                @if (DieukhoanHd != null)
                {
                    @if (DieukhoanHd._isNull == false)
                    {
                        <span class="text-danger">@DieukhoanHd._message</span>
                    }
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


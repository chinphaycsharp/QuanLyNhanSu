@model QuanLyNhanSu.ViewModels.Account.AddAccountEmployeeViewModel
@using QuanLyNhanSu.Commons
@{
    ViewData["Title"] = "AddAccount";
}

@{
    var resultidLogin = (ValidateResult)ViewBag.resultidLogin;
}

<br />
<h3>Cấp tài khoản</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="id" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="idLogin" class="control-label"></label>
                <select id="drpPosList" class="form-control" asp-for="idLogin" asp-items="@(new SelectList( ViewBag.accounts, "Id", "Username"))">
                </select>
                <input asp-for="idLogin" class="form-control" type="hidden" />
                @if (resultidLogin != null)
                {
                    @if (resultidLogin._isNull == false)
                    {
                        <span class="text-danger">@resultidLogin._message</span>
                    }
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


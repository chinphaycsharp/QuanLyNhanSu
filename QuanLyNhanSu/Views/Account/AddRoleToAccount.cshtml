@using QuanLyNhanSu.Commons
@model QuanLyNhanSu.ViewModels.Role.AddRoleToAccountViewModel
@{
    ViewData["Title"] = "AddRoleToAccount";
}
@{
    var resultRoles = (ValidateResult)ViewBag.resultRoles;
}

<br />
<h3>Gán quyền cho tài khoản</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRoleToAccount" method="post">
            <div class="form-group">
                @Html.HiddenFor(model => model.Id)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Roles, new { @class = "control-label" })
                <div class="col-sm-6">
                    @Html.ListBoxFor(model => model.Roles,new MultiSelectList(Model.drpRoles, "Value", "Text"), new { @class = "form-control", multiple = "multiple", id = "Subjects_dropdown" })
                </div>
                @if (resultRoles != null)
                {
                    @if (resultRoles._isNull == false)
                    {
                        <span class="text-danger">@resultRoles._message</span>
                    }
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#Subjects_dropdown').multiselect();
        });
    </script>
}
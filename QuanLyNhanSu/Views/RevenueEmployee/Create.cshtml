@model QuanLyNhanSu.ViewModels.RevenueEmployee.AddRevenueEmployeeViewModel
@using QuanLyNhanSu.Commons
@{
    ViewData["Title"] = "Create";
}

@{
    var resultMsnv = (ValidateResult)ViewBag.resultMsnv;
    var resultDoanhThu = (ValidateResult)ViewBag.resultDoanhThu;
}

<br />
<h3>Thêm mới</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Msnv" class="control-label"></label>
                <select id="drpPosList" class="form-control" asp-for="Msnv" asp-items="@(new SelectList( ViewBag.employees, "Msnv", "HotenNv"))">
                </select>
                <input asp-for="Msnv" class="form-control" type="hidden" />
                @if (resultMsnv != null)
                {
                    @if (resultMsnv._isNull == false)
                    {
                        <span class="text-danger">@resultMsnv._message</span>
                    }
                }
            </div>
            <div class="form-group">
                <label asp-for="DoanhThu" class="control-label"></label>
                <input asp-for="DoanhThu" class="form-control" />
                @if (resultDoanhThu != null)
                {
                    @if (resultDoanhThu._isNull == false)
                    {
                        <span class="text-danger">@resultDoanhThu._message</span>
                    }
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

